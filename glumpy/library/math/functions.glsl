/* ---------------------------------------------------------
   Hyperbolic cosine
   --------------------------------------------------------- */
float cosh(float x)
{
    return 0.5 * (exp(x)+exp(-x));
}

/* ---------------------------------------------------------
   Hyperbolic sine
   --------------------------------------------------------- */
float sinh(float x)
{
    return 0.5 * (exp(x)-exp(-x));
}
